<Window x:Class="StalkingStairsModManager.LocateGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game Not Found"
        Height="220" Width="420"
        Background="#0D0D0D"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border BorderBrush="#660000" BorderThickness="2" CornerRadius="8" Padding="15">
        <StackPanel>
            <TextBlock Text="GAME NOT FOUND"
                       Foreground="#FF3C3C"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="The Stalking Stairs could not be detected."
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,10,0,20"/>

            <Button Content="Locate Game Folder"
                    Click="Locate_Click"
                    Height="35"
                    Background="#330000"
                    Foreground="White"/>
        </StackPanel>
    </Border>
</Window>